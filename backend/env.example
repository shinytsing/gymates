# Gymates Backend 环境配置

# 应用配置
HOST=0.0.0.0
PORT=3000
GIN_MODE=debug
API_VERSION=v1

# 数据库配置
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=gymates
DB_PATH=gymates.db
DB_SSLMODE=disable

# JWT配置
JWT_SECRET=gymates-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# CORS配置
CORS_ORIGINS=*

# 模拟数据开关
MOCK_DATA=true

# 生产环境示例配置
# HOST=0.0.0.0
# PORT=8080
# GIN_MODE=release
# DB_TYPE=mysql
# DB_HOST=your-mysql-host
# DB_PORT=3306
