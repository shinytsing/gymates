  void _swipeLeft() {
    setState(() {
      _swipeDirection = 'left';
    });
    _cardAnimationController.forward().then((_) {
      setState(() {
        _currentCardIndex++;
        _swipeDirection = null;
      });
      _cardAnimationController.reset();
    });
  }

  void _swipeRight() {
    setState(() {
      _swipeDirection = 'right';
    });
    _cardAnimationController.forward().then((_) {
      setState(() {
        _currentCardIndex++;
        _isMatched = true;
        _swipeDirection = null;
      });
      _cardAnimationController.reset();
      _matchAnimationController.forward();
    });
  }

